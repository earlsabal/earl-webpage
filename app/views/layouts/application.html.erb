<!DOCTYPE html>
<html>
<head>
  <title>Earl Sabal's Page</title>
  
  <% flash.each do |name, msg| %>
  	<%= content_tag :p, msg if msg.is_a?(String) %>
  <% end %>
  <%= link_to "home", posts_path %>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>



<%= yield %>
<div id="container">
      
      <% if current_admin %>
        <p><%= button_to 'Logout', admin_session_path(current_admin_session), :method => :delete %></p>
      <% else %>
        <p><%= link_to 'Login', new_admin_session_path %></p>
      <% end %>
    </div>
</body>
</html>
