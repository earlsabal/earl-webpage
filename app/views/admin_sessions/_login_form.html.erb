<%= simple_form_for (@admin_session), :url => admin_session_path do |f| %>

   <% @admin_session.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
   <% end %>
  <div class="post">
    <p>
      <%= f.label :login %><br />
      <%= f.text_field :login %>
    </p>
   
    <p>
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </p>
   
    <%= f.submit "Login" %>
  </div>
<% end %>