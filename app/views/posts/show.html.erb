<%= @post.title %>
 
<h2><%=link_to (@post.title), post_path(@post) %></h2>
<p><%= @post.body %></p>

	<h3>Comments</h3>

	<%= render @post.comments %>
    <%= will_paginate @comments %>



<h3>Post Your Comment</h3>
<% simple_form_for ([@post, Comment.new]) do |form| %>
  <p><%= form.label :author %></p>
  <p><%= form.text_field :author %></p>
 
  <p><%= form.label :text, 'Comment' %></p>
  <p><%= form.text_area :text %></p>
 
  <%= form.button :submit %>
<% end %>

<p>
  Admin Actions: 
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Delete', post_path(@post), :method => :delete, :confirm => "Are you sure?" %>
</p>