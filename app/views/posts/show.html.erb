<% title @post.title %>
 
<h2><%=link_to (@post.title), book_path(@post)) %></h2>
<p><%= @post.body %></p>

<% if @comments %>
	<h3>Comments</h3>

	<% @comments.each do |comment| %>
		<%= comment.author %>
    	<%= post.text %>
    <% end %>

    <%= will_paginate @comments %>
<% end %>


<h3>Post Your Comment</h3>
<% simple_form_for ([@post, Comment.new]) do |form| %>
  <p><%= form.label :author %></p>
  <p><%= form.text_field :author %></p>
 
  <p><%= form.label :text, 'Comment' %></p>
  <p><%= form.text_area :text %></p>
 
  <%= form.button :submit %>
<% end %>

<p>
  Admin Actions: 
  <%= link_to 'Edit', edit_book_path(@book) %> |
  <%= link_to 'Delete', book_path(@book), :method => :delete, :confirm => "Are you sure?" %>
</p>