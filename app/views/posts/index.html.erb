<div align= "left"><%= render "layouts/login" %></div>
<%= image_tag("Profile Pic.jpg", size: '240x240') %>
<%= render "layouts/navbar" %>


  <% @posts.each do |post| %>
    <div class="row">
      <h2><%= link_to (post.title), post_path(post) %></h2>
      <p>
        <%= simple_format(truncate(post.body, length: 20)) %>
      </p>
    </div>
  <% end %>

  <%= will_paginate @comments %>

  

  <% if current_admin %>
    <p>
      Admin actions: <%= link_to 'New Post', new_post_path %>
    </p>
  <% end %>

