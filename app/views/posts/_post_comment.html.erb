<div class="post">
<h3>Post Your Comment</h3>
  <%= simple_form_for([@post, @post.comments.build]) do |f| %>
    <div class="field">
      <%= f.label :author %><br />
      <%= f.text_field :author %>
    </div>
    <div class="field">
      <%= f.label :text %><br />
      <%= f.text_area :text %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>